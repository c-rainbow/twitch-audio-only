{
    "name": "Twitch Radio Mode",
    "version": "0.0.3",
    "description": "Enables Twitch radio mode in web",
    "manifest_version": 2,
    "permissions": [
        "webRequest",
        "*://*.twitch.tv/*",
        "*://*.ttvnw.net/*"
    ],
    "background":{
        "scripts": ["./dist/background.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.twitch.tv/*"
            ],
            "css": ["./css/style.css"],
            "js": ["./include/hls.js/hls.js", "./dist/contentscript.js"]
        }
    ]
  }
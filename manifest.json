{
    "name": "Audio-only Twitch",
    "version": "0.0.1",
    "description": "Enables Twitch radio mode in web",
    "manifest_version": 2,
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.twitch.tv/*",
        "*://*.ttvnw.net/*"
    ],
    "background":{
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*.twitch.tv/*"],
            "excludes": [
                "*://*.twitch.tv/videos/*",
                "*://*clip*.twitch.tv/*",
                "*://*.twitch.tv/*/clip/*"
            ],
            "css": ["custom.css"],
            "js": ["hls.js", "contentscript.js"]
        }
    ]
  }
{
    "name": "Getting Started Example",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.twitch.tv/*",
        "*://*.ttvnw.net/*"
    ],
    "background":{
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["*://*.twitch.tv/*"],
            "css": ["custom.css"],
            "js": ["preload.js", "hls.js", "contentscript.js"]
        }
    ]
  }
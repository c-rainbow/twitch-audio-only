{
    "name": "Audio-only Twitch",
    "version": "0.0.1",
    "description": "Enables Twitch radio mode in web",
    "manifest_version": 2,
    "permissions": [
        "webRequest",
        "*://*.twitch.tv/*",
        "*://*.ttvnw.net/*"
    ],
    "background":{
        "scripts": ["./dist/background_combined.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.twitch.tv/*"
            ],
            "css": ["custom.css"],
            "js": ["./src/hls_.js", "./dist/contentscript_combined.js"]
        }
    ],
    "web_accessible_resources": ["svg/*.svg"]
  }
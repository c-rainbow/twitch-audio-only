{
    "name": "Audio-only Twitch",
    "version": "0.0.1",
    "description": "Enables Twitch radio mode in web",
    "manifest_version": 2,
    "permissions": [
        "webRequest",
        "*://*.twitch.tv/*",
        "*://*.ttvnw.net/*",
        "<all_urls>"
    ],
    "background":{
        "scripts": ["dist/background_combined.js"]
    },
    "content_scripts": [
        {
            "run_at": "document_idle",
            "matches": [
                "*://*.twitch.tv/*",
                "<all_urls>"
            ],
            "css": ["custom.css"],
            "js": ["dist/contentscript_combined.js"]
        }
    ]
  }